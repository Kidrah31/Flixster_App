<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grey_tint_dark">


    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:transitionName="profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivOverlay"
        android:layout_width="67dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/ivPoster"
        android:layout_alignBottom="@+id/ivPoster"
        android:layout_alignParentRight="true"
        android:layout_marginTop="69dp"
        android:layout_marginRight="307dp"
        android:layout_marginBottom="49dp"
        android:foregroundGravity="center"
        android:src="@drawable/play_icon" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:background="@drawable/t_layout"
        android:backgroundTint="@color/grey_tint_dark"
        android:fontFamily="@font/bebasneue"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#C1000000"
        android:textSize="30sp"
        android:typeface="normal"
        tools:text="Movie Title" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="277dp"
        android:layout_height="131dp"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:background="@drawable/t_layout"
        android:backgroundTint="@color/grey_tint_light"
        android:fontFamily="@font/allerta"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/primaryLightColor"
        tools:text=" Movie Overview" />
</RelativeLayout>